        <button type="button" id="updateAddBtn" onclick="updateAddSubProduct()">Add</button>
    </div>
</div>

<div id="updateSelectProduct" style="display: none; flex-direction: column;">
    <!-- Title Input Box -->
    <label for="updatesubProductName">Sub Product</label>
    <input type="text" id="updatesubProductName" name="productTitle" required>
    <br>

    <label for="updatesubProductLink">Product Link</label>
    <input type="text" id="updatesubProductLink" name="productLink" required>
    <br>

    <label for="updatesubProductPhoto">Photo Link</label>
    <input type="text" id="updatesubProductPhoto" name="subproductPhoto" required>

    <button type="button" id="updateBtn" onclick="updateSubProductList()">Update</button>
</div>