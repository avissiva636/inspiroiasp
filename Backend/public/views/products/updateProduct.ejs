    <select id="updateSubProduct" onchange="handleSubProductSelection()">
        <!-- Add more options as needed -->
    </select>
    <br>
    <button type="button" id="subButtonBtn"
        onclick="toggleVisibility('yesSubtitle','upAddSubtDescVisiblity','updateSelectProduct')">New Sub</button>
    <br>

    <div id="upAddSubtDescVisiblity" style="display: none; flex-direction: column;">
        <!-- Title Input Box -->
        <label for="upAddSubProductName">Sub Product</label>
        <input type="text" id="upAddSubProductName" name="subProductName" required>
        <br>

        <label for="upAddSubProductLink">Product Link</label>
        <input type="text" id="upAddSubProductLink" name="subProductLink" required>

        <label for="updateProductPhoto">Photo Link</label>
        <!-- <input type="file" id="updateProductPhoto" name="productPhoto" accept="image/*" required> -->
        <input type="text" id="updateProductPhoto" name="productPhoto" required>
